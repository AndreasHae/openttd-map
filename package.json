{
  "name": "openttd-viz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "concurrently -k 'npm run start:next' 'npm run start:rust'",
    "start:next": "next dev",
    "start:rust": "cd savegame-reader && chokidar src/**/*.rs -c 'wasm-pack build' --initial --debounce",
    "lint": "next lint",
    "format": "prettier --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "^4.5.11",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@types/node": "17.0.42",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "autoprefixer": "^10.4.7",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.1.2",
    "typescript": "4.7.3"
  }
}
