{
  "name": "openttd-map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "concurrently -k 'npm run start:next' 'npm run start:rust'",
    "start:next": "next dev",
    "start:rust": "cd savegame-reader && chokidar src/**/*.rs -c 'wasm-pack build --debug' --initial --debounce",
    "lint": "next lint",
    "format": "prettier --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "5.0.8",
    "@react-sigma/core": "4.0.2",
    "graphology": "0.25.4",
    "graphology-types": "0.24.7",
    "next": "14.2.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-dropzone": "14.2.3",
    "sigma": "3.0.0-beta.20"
  },
  "devDependencies": {
    "@types/node": "20.14.6",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.19",
    "chokidar-cli": "3.0.0",
    "concurrently": "8.2.2",
    "daisyui": "4.12.2",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.4",
    "postcss": "8.4.38",
    "prettier": "3.3.2",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.2"
  }
}
